{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist/tsc",
        "baseUrl": "src",
        "typeRoots": ["node_modules/@types"],
        "types": ["node"],
        "skipLibCheck": true,
        "paths": {
            "@utils/*": ["utils/*"],
            "@": ["src"]
        }
    },
    "include": ["src/**/*"]
}
